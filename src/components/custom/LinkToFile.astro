---
type Props = {
    slug: string;
    latex?: string;
    pdf?: string;
}

const { slug, latex , pdf } = Astro.props;
const path = `/blog/${slug}`;
---
{(latex || latex) && (
<div class="font-base text-sm">
    &bull;
    Available in
    {latex && (
            <a href=`${path}/${latex}` class="hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out">
                <span class="underline">LaTeX</span>
            </a>
    )}
    {latex && pdf && " and "}
    {pdf && (
            <a href=`${path}/${pdf}` class="hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out">
                <span class="underline">PDF</span>
            </a>
    )}
</div>
    )}
